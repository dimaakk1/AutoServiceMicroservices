{

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    }
  },
  "Jwt": {
    "Key": "ThisIsASecretKeyWithMinimum32Chars!", // мінімум 16 символів
    "Issuer": "AutoService",
    "Audience": "AutoServiceUsers"
  },

  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        }
      },

      "orders-route": {
        "ClusterId": "orders-cluster",
        "Match": {
          "Path": "api/Orders/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/orders" }
        ],
        "AuthorizationPolicy": "JwtPolicy"
      },

      "catalog-route": {
        "ClusterId": "catalog-cluster",
        "Match": {
          "Path": "api/Catalog/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/catalog" }
        ],
        "AuthorizationPolicy": "JwtPolicy"
      },

      "reviews-route": {
        "ClusterId": "reviews-cluster",
        "Match": {
          "Path": "api/Reviews/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/reviews" }
        ],
        "AuthorizationPolicy": "JwtPolicy"
      }
    },

    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-service": {
            "Address": "https://localhost:5004/"
          }
        }
      },

      "orders-cluster": {
        "Destinations": {
          "orders-service": {
            "Address": "https://localhost:5003"
          }
        }
      },

      "catalog-cluster": {
        "Destinations": {
          "catalog-service": {
            "Address": "https://localhost:5001"
          }
        }
      },

      "reviews-cluster": {
        "Destinations": {
          "reviews-service": {
            "Address": "https://localhost:5002"
          }
        }
      }
    }
  }
}
